<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.business.BusinessApplicantActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            >

            <EditText
                android:singleLine="true"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                />

            <EditText
                android:singleLine="true"
                android:id="@+id/idNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID/Passport/INC/CERT. of REG "
                />
            <EditText
                android:singleLine="true"
                android:id="@+id/pinNumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Pin NO"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/poBox"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="PO Box"
                    />
                <EditText
                    android:layout_marginLeft="40dp"
                    android:id="@+id/postalCode"
                    android:layout_width="150dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:hint="Postal Code"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/physicalLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Physical Location (Location/Road)"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/mobileNumber"
                    android:layout_width="150dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    />
                <EditText
                    android:layout_marginLeft="40dp"
                    android:id="@+id/officeNumber"
                    android:inputType="number"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Office Number"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/ownerTenant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Owner/Tenant"
                />

            <EditText
                android:id="@+id/tentant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="If Tenant:(Name Of Landlord)"
                />
            <EditText
                android:id="@+id/poBox2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="PO Box"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/postalCodeTwo"
                    android:layout_width="150dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:hint="Postal Code"
                    />
                <EditText
                    android:layout_marginLeft="40dp"
                    android:id="@+id/phonenumber"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/businessNature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nature Of Business"
                />

            <EditText
                android:id="@+id/yearOfBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Year Business Established"
                />

            <EditText
                android:id="@+id/introBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduced By"
                android:inputType="date"
                android:maxLength="4"
                />


            <EditText
                android:id="@+id/purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Purpose Of Asset Being Purchased"
                />

        </LinearLayout>

        <TextView
            android:layout_margin="16dp"
            android:id="@+id/pageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:text="PAGE: 1/10"
            android:textColor="@color/imbluedark"
            android:paddingTop="30dp"
            />

        <Button
            android:id="@+id/proceedOne"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:layout_alignParentRight="true"
            android:text="proceed"
            android:background="@color/blue"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>