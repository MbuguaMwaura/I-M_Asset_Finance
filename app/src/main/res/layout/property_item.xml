<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardVehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:id="@+id/linear9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/editPageTwo"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="EXISTING PROPERTY"
                android:textSize="20sp"
                />


            <LinearLayout
                android:layout_centerInParent="true"
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/savedproperty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Property (Residential/Commercial)"
                    />

                <TextView
                    android:id="@+id/savedsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Size"
                    />


                <TextView
                    android:id="@+id/savedlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location"
                    />

                <TextView
                    android:id="@+id/savedlrNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lr No."
                    />

                <TextView
                    android:id="@+id/savedvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Approximate Value"
                    />




            </LinearLayout>






        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>