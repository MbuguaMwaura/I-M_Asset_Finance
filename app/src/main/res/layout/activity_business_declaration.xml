<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.business.BusinessDeclarationActivity">


    <LinearLayout
        android:padding="16dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="I/We confirm that the information given in this form is true to the best of my/our knowledge and belief"
            />
        <TextView
            android:id="@+id/signatureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Signature "
            />


        <ImageView
            android:id="@+id/selectedSignature"
            android:layout_width="200dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/selectSignature"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a Signature"
                    android:textColor="@color/white"
                    android:background="@color/imorange"
                    />
                <Button
                    android:id="@+id/signature"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create a Signature"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:background="@color/imorange"

                    />
            </RelativeLayout>


        </LinearLayout>

        <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="Date"-->
        <!--android:inputType="date"-->
        <!--/>-->
        <Button
            android:id="@+id/uploadSignature"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload   Signature"
            android:textColor="@color/white"
            android:background="@color/imorange"
            />

    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:id="@+id/pageNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAGE: 10/10"
        android:textColor="@color/imbluedark"
        android:paddingTop="30dp"
        />

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/proceedTen"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="proceed"
        android:background="@color/blue"
        android:textColor="@color/white"
        />


</RelativeLayout>